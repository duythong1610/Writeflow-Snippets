{
  "CRUD Table with Actions": {
    "prefix": "crudtable",
    "body": [
      "import { Table, Button, Space, Popconfirm } from 'antd';",
      "import { EditOutlined, DeleteOutlined, EyeOutlined } from '@ant-design/icons';",
      "import type { ColumnsType, TableProps } from 'antd/es/table';",
      "",
      "interface ${1:CrudTableProps}<T> {",
      "  data: T[];",
      "  loading?: boolean;",
      "  onEdit?: (record: T) => void;",
      "  onDelete?: (record: T) => Promise<void>;",
      "  onView?: (record: T) => void;",
      "  showActions?: {",
      "    edit?: boolean;",
      "    delete?: boolean;",
      "    view?: boolean;",
      "  };",
      "  extraColumns?: ColumnsType<T>;",
      "  pagination?: TableProps<T>['pagination'];",
      "  rowSelection?: TableProps<T>['rowSelection'];",
      "} ",
      "",
      "const ${2:CrudTable} = <T extends { id: string | number }>({",
      "  data,",
      "  loading = false,",
      "  onEdit,",
      "  onDelete,",
      "  onView,",
      "  showActions = { edit: true, delete: true, view: false },",
      "  extraColumns = [],",
      "  pagination,",
      "  rowSelection",
      "}: ${1:CrudTableProps}<T>) => {",
      "  const actionColumn: ColumnsType<T>[0] = {",
      "    title: 'Actions',",
      "    key: 'action',",
      "    width: 150,",
      "    fixed: 'right',",
      "    render: (_, record) => (",
      "      <Space>",
      "        {showActions.view && onView && (",
      "          <Button",
      "            type=\"text\"",
      "            icon={<EyeOutlined />}",
      "            onClick={() => onView(record)}",
      "            title=\"View details\"",
      "          />",
      "        )}",
      "        {showActions.edit && onEdit && (",
      "          <Button",
      "            type=\"text\"",
      "            icon={<EditOutlined />}",
      "            onClick={() => onEdit(record)}",
      "            title=\"Edit\"",
      "          />",
      "        )}",
      "        {showActions.delete && onDelete && (",
      "          <Popconfirm",
      "            title=\"Confirm delete\"",
      "            description=\"Are you sure you want to delete this item?\"",
      "            onConfirm={() => onDelete(record)}",
      "            okText=\"Delete\"",
      "            cancelText=\"Cancel\"",
      "            okButtonProps={{ danger: true }}",
      "          >",
      "            <Button",
      "              type=\"text\"",
      "              icon={<DeleteOutlined />}",
      "              danger",
      "              title=\"Delete\"",
      "            />",
      "          </Popconfirm>",
      "        )}",
      "      </Space>",
      "    ),",
      "  };",
      "",
      "  const columns: ColumnsType<T> = [",
      "    ...extraColumns,",
      "    ...(Object.values(showActions).some(Boolean) ? [actionColumn] : [])",
      "  ];",
      "",
      "  return (",
      "    <Table<T>",
      "      columns={columns}",
      "      dataSource={data}",
      "      loading={loading}",
      "      rowKey=\"id\"",
      "      pagination={pagination !== false ? {",
      "        showSizeChanger: true,",
      "        showTotal: (total, range) => `\\${range[0]}-\\${range[1]} of \\${total} items`,",
      "        defaultPageSize: 10,",
      "        pageSizeOptions: ['10', '20', '50', '100'],",
      "        ...pagination,",
      "      } : false}",
      "      rowSelection={rowSelection}",
      "      scroll={{ x: 'max-content' }}",
      "      size=\"middle\"",
      "    />",
      "  );",
      "};",
      "",
      "export default ${2:CrudTable};"
    ],
    "description": "Reusable CRUD Table with actions + improved pagination"
  }
}
